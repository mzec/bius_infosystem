<!DOCTYPE html>
<html>
<head>
  <title>Infosystem</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body>
  <div id="top">	
    <div id="userinfo">
      <%= render(:partial => "layouts/userinfo") %>
	</div>

	<div id="navigation">
	  <%= render(:partial => "layouts/navigation") %>
	</div>
  </div>

  <div id="main">
    <div id="notice">
	  <p>
	    <% if flash[:notice] -%>
        <%= flash[:notice] %>
        <% end -%>
      </p>
    </div>
    <div id="body"/>
      <%= yield %>
    </div>
  </div>
</body>
</html>
