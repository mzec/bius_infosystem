<ul>
  <% for l in @loans %>
    <li>
      Predmet: <%= link_to l.loanable.name, item_loans_url(l.loanable) %> | 
      Posudio: <%= link_to l.borrower.name, member_url(l.borrower) %> | 
      Odobrio: <%= link_to l.lender.name,  member_url(l.lender) %> | 
      Od: <%= l.date_from %> | 
      Do: <%= l.date_to %>
  <% end %>
</ul>
<% end %>
