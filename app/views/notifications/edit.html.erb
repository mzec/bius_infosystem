<h1>Notification#edit</h1>
<p><%= render :partial => "show_menu" %></p>
<hr/>

<%= error_messages_for :notification %>

<% form_for @notification , edit_notification_url do |form| %>

<p>
Title:<br/>
<%= form.text_field :title %>
</p>

<p>
Body:<br/>
<%= form.text_area :body, :rows => '10', :cols => '30' %>
</p>

<p>
Tags: |
<% for tag in @tags %>
 <%= tag.title %>
 <%= check_box_tag 'tag_ids[]', tag.id , @notification.tag_ids.include?(tag.id) %> |
<% end %>
</p>

<p>
<%= submit_tag 'Update' %>
</p>

<% end %>
