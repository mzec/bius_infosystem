<h1>Item#Requests</h1>

<%= render :partial => "items/menu" %>

<% unless @item.requests.empty? %>
<ul>
  <% for r in @item.requests %>
  <li>
  <%=h display_action(r.action)%> |
  <%= link_to "#{r.requester.first_name} #{r.requester.last_name}", member_url(r.requester.id) %> |Date: <%= r.date_requested %> |
  <%= link_to "[+]", allow_item_request_url(@item, r.id) %> <%= link_to "[-]", deny_item_request_url(@item, r.id) %></li>
  <% end %>
</ul>
<% end %>

