<% content_for :head do %> 
  <%= render :partial => "index_menu" %>
<% end %>

<%= form_tag search_transfers_path do %>
  <div>
    Purpose..<br/>
    <%= text_field_tag 'keyword' %>
    <%= submit_tag "Search" %>
  </div>
<% end %>


<% unless @transfers.empty? %>
  <div>
    <ul>

      <% for t in @transfers %>
        <li><%= link_to t.amount, transfer_url(t) %></li>
      <% end %>

    </ul>
  </div>
<% end %>
